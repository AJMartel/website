.main-ui-view
  %section.main-content
    .header
      .project-tagline A standard notes app with an un-standard focus on longevity, portability, and privacy.

      .features{"style" => "font-size: 20px;"}
        %p End-to-end encryption
        %p Custom editors and extensions
        %p Cross-platform applications and sync
        %p Data ownership by default
        %p Architecture and design that ensure longevity and sustainability


      %h3{"style" => "margin-top: 30px; font-size: 22px;"} Available for free on:
      .downloads-container.mt-20
        .download-item{"ng-repeat" => "item in downloads"}
          %a.content-link{"href" => "{{item.link}}", "target" => "_blank"}
            .icon
              %img{"ng-src" => "assets/{{item.icon}}"}
            .links
              %a.link{"href" => "{{item.link}}", "target" => "_blank"} {{item.name}}
              %a.link.normal.screenshot-link.faded{"ng-if" => "item.screenshots.length > 0", "ng-click" => "clickedScreenshots(item)"} Screenshots

        .screenshots{"ng-if" => "displayData.screenshot", "ng-click" => "displayData.screenshot = null"}
          .arrow.left-arrow{"ng-click" => "previousScreenshot($event)", "ng-class" => "hasPreviousScreenshot() ? '' : 'disabled'"} ➞
          .content
            .screenshot.center.center-align
              %img.image.shadow-image{"ng-src" => "{{displayData.screenshot}}"}
          .arrow.right-arrow{"ng-click" => "nextScreenshot($event)", "ng-class" => "hasNextScreenshot() ? '' : 'disabled'"} ➞


      .email-subscribe-wrapper
        .content
          .title Stay up to date with Standard Notes releases and news.
          .subtitle Subscribe to Standard Notes announcements.
          %link{:href => "//cdn-images.mailchimp.com/embedcode/slim-10_7.css", :rel => "stylesheet", :type => "text/css"}/
          :css
            #mc_embed_signup{background:#fff; clear:left; font:14px Helvetica,Arial,sans-serif; width: 100%;}
          #mc_embed_signup
            %form#mc-embedded-subscribe-form.validate{:action => "//standardnotes.us14.list-manage.com/subscribe/post?u=f703bdd7fd7cd0923a94b3bd3&id=8523dd24a8", :method => "post", :name => "mc-embedded-subscribe-form", :novalidate => "", :target => "_blank"}
              #mc_embed_signup_scroll
                %input#mce-EMAIL.email{:name => "EMAIL", :placeholder => "email address", :required => "", :type => "email", :value => ""}
                / real people should not fill this in and expect good things - do not remove this or risk form bot signups
                %div{"aria-hidden" => "true", :style => "position: absolute; left: -5000px;"}
                  %input{:name => "b_f703bdd7fd7cd0923a94b3bd3_8523dd24a8", :tabindex => "-1", :type => "text", :value => ""}/
                .clear
                  %input#mc-embedded-subscribe.button{:name => "subscribe", :type => "submit", :value => "Subscribe"}
          .social
            %a.icon-twitter{"href" => "https://twitter.com/standardnotes", "target" => "_blank"}
            %a.icon-github{"href" => "https://github.com/standardnotes", "target" => "_blank"}
            %a.icon-reddit{"href" => "https://www.reddit.com/r/StandardNotes/", "target" => "_blank"}

    %ng-include{"src" => "'doc/spec.html'"}

    %h1 Credits
    %ng-include{"src" => "'templates/producers_list.html'"}
